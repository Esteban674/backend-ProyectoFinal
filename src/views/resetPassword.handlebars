<div class="container">
    <div class="row justify-content-center min-vh-100 mt-5">
      <div class="col-md-6">
        <form action="/restablecer-contrasena" method="POST">
          <h1 class="text-center mb-4">Restablecer contraseña</h1>
          <div class="form-group">
            <label for="password">Nueva contraseña:</label>
            <input type="password" id="password" name="password" class="form-control" required>
          </div>
          <div class="form-group">
            <label for="confirmPassword">Confirmar contraseña:</label>
            <input type="password" id="confirmPassword" name="confirmPassword" class="form-control" required>
          </div>
          <button type="submit" class="btn btn-primary btn-block mt-2">Restablecer</button>
        </form>
      </div>
    </div>
  </div>